﻿@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims;
@using System.Security.Principal;
@using System.Security.Cryptography
@using System.Text
@using System.IdentityModel.Tokens.Jwt

<AuthorizeView>
    <Authorized>
        <MudMenu Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <MudMenuItem>
                <MudText Typo="Typo.body2">@context.User.Identity?.Name</MudText>
            </MudMenuItem>
            <MudDivider />
            <MudMenuItem Href="/authentication/logout">
                <MudIcon Icon="@Icons.Material.Filled.Logout" Class="mr-2" />
                Sign Out
            </MudMenuItem>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudButton Href="/authentication/login" Color="Color.Inherit" Variant="Variant.Text">
            <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" />
            Sign In
        </MudButton>
    </NotAuthorized>
</AuthorizeView>
